# Server Configuration
PORT=3001
NODE_ENV=development

# Inworld Runtime Configuration
INWORLD_API_KEY=your_inworld_api_key_here
INWORLD_API_SECRET=your_inworld_api_secret_here
INWORLD_SCENE_ID=your_scene_id_here
INWORLD_CHARACTER_ID=your_character_id_here

# Chat Service (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Image Generation Service (Black Forest Labs Flux)
FLUX_API_KEY=your_flux_api_key_here
FLUX_API_BASE_URL=https://api.bfl.ai
FLUX_DEFAULT_MODEL=flux-dev
FLUX_USE_MOCK=true

# Image Storage Configuration
IMAGE_STORAGE_PATH=./storage/images
IMAGE_MAX_SIZE=10MB
IMAGE_THUMBNAIL_SIZE=300

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT_MS=1800000
