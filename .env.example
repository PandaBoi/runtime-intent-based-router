# Server Configuration
PORT=3001
NODE_ENV=development

# Inworld Runtime Configuration
INWORLD_API_KEY=your_inworld_api_key_here
INWORLD_API_SECRET=your_inworld_api_secret_here
INWORLD_SCENE_ID=your_scene_id_here
INWORLD_CHARACTER_ID=your_character_id_here

# Image Generation Service (OpenAI DALL-E)
OPENAI_API_KEY=your_openai_api_key_here

# Image Editing Service Configuration
IMAGE_EDIT_API_KEY=your_image_edit_api_key_here
